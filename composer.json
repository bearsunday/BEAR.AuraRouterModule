{
    "name": "bear/aura-router-module",
    "description": "Aura Router v3 module for BEAR.Package",
    "keywords": [
        "BEAR.Sunday",
        "Router",
        "Aura"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "aura/router": "^3.1",
        "zendframework/zend-diactoros": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "bear/package": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Package\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Package\\": "tests/",
            "FakeVendor\\HelloWorld\\": "tests/Fake/fake-app/src"
        }
    },
    "scripts": {
        "test": ["phpunit"],
        "tests": ["@cs", "phpmd src,tests text ./phpmd.xml", "phpstan analyse -l max src tests -c phpstan.neon --no-progress", "@test"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=phpcs.xml src;"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src tests"]
    }
}
